#!/usr/bin/env node

/*

	things to configure


	hostname
	tags
	public ip
	private ip
	etcd token
	aws_key
	aws_secret
	registry_aws_bucket
	registry_secret_key
	mailgun_key
	mailgun_domain
	
	



 */

var etcd = require('../lib/bootstrap/etcd')
var args = require('minimist')(process.argv, {
  boolean:['seed'],
  alias:{
    s:'seed'
  }
})

if(args.seed){
	etcd.writeToken(function(err, token){
		if(err){
			console.error(err)
			process.exit(1)
		}
		else{
			console.log('token: ' + token)
		}
	})
}
