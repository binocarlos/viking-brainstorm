#!/usr/bin/env node
var program = require('commander')
var etcd = require('../lib/bootstrap/etcd')


/*

	things to configure


	hostname
	tags
	public ip
	private ip
	etcd token
	aws_key
	aws_secret
	registry_aws_bucket
	registry_secret_key
	mailgun_key
	mailgun_domain
	
	



 */

program
  .usage('')
  .option('-s, --seed', 'generate a new etcd cluster token')

program.parse(process.argv);

if(program.seed){
	etcd.writeToken(function(err, token){
		if(err){
			console.error(err)
			process.exit(1)
		}
		else{
			console.log('token: ' + token)
		}
	})
}
