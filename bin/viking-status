#!/usr/bin/env node

var program = require('commander');

program
  .usage('')
 
program.on('--help', function(){
  console.log('  Examples:');
  console.log();
  console.log('    # start viking');
  console.log('    $ viking start');
  console.log();
  console.log();
  console.log();
  process.exit();
});

var async = require('async');
var utils = require('component-consoler');
var path = require('path');
var fs = require('fs');
var log = utils.log;
var spawn = require('child_process').spawn
var config = require('../../lib/config')();
var Etcd = require('../../lib/services/etcd');
var Registry = require('../../lib/services/registry');

console.log('');
async.series([
  function(next){
    console.log('');
    utils.log('viking', 'config');
    console.log('');
    console.log(JSON.stringify(config, null, 4));
    next();
  },

  function(next){
    console.log('');
    utils.log('viking', 'docker processes');
    console.log('');
    var ps = spawn('docker', ['ps'], { stdio: 'inherit', customFds: [0, 1, 2] });

    ps.on('close', function(code){
      console.log('');
      next();
    });

  }

], function(){
  
})