#!/usr/bin/env node
var program = require('commander')
var Bootstrap = require('../lib/bootstrap')

program
  //.usage('viking build [scripts] [styles] [files]')
  .usage('')
  .option('-f, --filter [filtername]', 'filter which logs to tail (host, etcd)')
  .option('-h, --host', 'tail only the host logs')
  .option('-e, --etcd', 'tail only the etcd logs')
 
program.parse(process.argv);

if(program.host){
  program.filter = 'host'
}
if(program.etcd){
  program.filter = 'etcd'
}

function tailLogs(next){
  if(!program.filter || program.filter=='host'){
    Bootstrap.tailLogs(function(){})
  }

  if(!program.filter || program.filter=='etcd'){
    Bootstrap.tailEtcd(function(){})
  }
}

tailLogs()